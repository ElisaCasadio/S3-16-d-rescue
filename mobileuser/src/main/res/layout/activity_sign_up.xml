<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="it.unibo.mobileuser.authentication.SignUpActivity">

    <include
            android:layout_width="match_parent"
            layout="@layout/toolbar"
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize">
    </include>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/name_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:inputType="text"
                    app:met_baseColor="@color/white"
                    app:met_primaryColor="@color/white"
                    app:met_floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/surname_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/surname"
                    android:inputType="text"
                    app:met_baseColor="@color/white"
                    app:met_primaryColor="@color/white"
                    app:met_floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/email_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    app:met_baseColor="@color/white"
                    app:met_primaryColor="@color/white"
                    app:met_floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/phone_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    app:met_baseColor="@color/white"
                    app:met_primaryColor="@color/white"
                    app:met_floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/password_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    app:met_baseColor="@color/white"
                    app:met_primaryColor="@color/white"
                    app:met_floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/confirm_password_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    app:met_baseColor="@color/white"
                    app:met_primaryColor="@color/white"
                    app:met_floatingLabel="highlight"/>

        </LinearLayout>

        <Button
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_exclamation"
                android:padding="6dp"
                android:textStyle="bold"
                android:clickable="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorAccent"
                android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
