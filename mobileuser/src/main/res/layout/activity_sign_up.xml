<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="it.unibo.mobileuser.authentication.SignUpActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            style="@style/toolbar_look">
    </include>

    <LinearLayout
            style="@style/layout_base_secondary">

        <LinearLayout
                style="@style/external_layout_material_edit_text"
                android:layout_marginBottom="@dimen/margin_medium">

            <LinearLayout
                    style="@style/layout_material_edit_text">

                <com.rengwuxian.materialedittext.MaterialEditText
                        style="@style/material_edit_text_look"
                        android:id="@+id/name_sign_up"
                        android:hint="@string/name"
                        android:inputType="text"
                        app:met_floatingLabel="highlight"
                        app:met_iconLeft="@drawable/ic_account_circle_white_48dp"/>

            </LinearLayout>

            <LinearLayout
                    style="@style/layout_material_edit_text">

                <com.rengwuxian.materialedittext.MaterialEditText
                        style="@style/material_edit_text_look"
                        android:id="@+id/surname_sign_up"
                        android:hint="@string/surname"
                        android:inputType="text"
                        app:met_floatingLabel="highlight"
                        app:met_iconLeft="@drawable/ic_account_circle_white_48dp"/>

            </LinearLayout>

            <LinearLayout
                    style="@style/layout_material_edit_text">

                <com.rengwuxian.materialedittext.MaterialEditText
                        style="@style/material_edit_text_look"
                        android:id="@+id/email_sign_up"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        app:met_floatingLabel="highlight"
                        app:met_iconLeft="@drawable/ic_mail_outline_white_48dp"/>

            </LinearLayout>

            <LinearLayout
                    style="@style/layout_material_edit_text">

                <com.rengwuxian.materialedittext.MaterialEditText
                        style="@style/material_edit_text_look"
                        android:id="@+id/phone_sign_up"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        app:met_floatingLabel="highlight"
                        app:met_iconLeft="@drawable/ic_phone_white_48dp"/>

            </LinearLayout>

            <LinearLayout
                    style="@style/layout_material_edit_text">

                <com.rengwuxian.materialedittext.MaterialEditText
                        style="@style/material_edit_text_look"
                        android:id="@+id/password_sign_up"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        app:met_floatingLabel="highlight"
                        app:met_iconLeft="@drawable/ic_vpn_key_white_48dp"/>

            </LinearLayout>

            <LinearLayout
                    style="@style/layout_material_edit_text">

                <com.rengwuxian.materialedittext.MaterialEditText
                        style="@style/material_edit_text_look"
                        android:id="@+id/confirm_password_sign_up"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        app:met_floatingLabel="highlight"
                        app:met_iconLeft="@drawable/ic_vpn_key_white_48dp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
                style="@style/button_look"
                android:id="@+id/sign_up"
                android:text="@string/sign_up_exclamation"
                android:layout_marginBottom="@dimen/margin_small"/>

    </LinearLayout>

</LinearLayout>
